<h1>Listing gateways</h1>

<table>
  <tr>
    <th>Name</th>
    <th>Upload</th>
    <th>Download</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @gateways.each do |gateway| %>
  <tr>
    <td><%= gateway.name %></td>
    <td><%= gateway.upload %></td>
    <td><%= gateway.download %></td>
    <td><%= link_to 'Show', gateway %></td>
    <td><%= link_to 'Edit', edit_gateway_path(gateway) %></td>
    <td><%= link_to 'Destroy', gateway, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

